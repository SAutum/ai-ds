   "source": [
    "# A simple algorithm to check the result of PCA\n",
    "\n",
    "import numpy as np\n",
    "X = np.array(\n",
    "    [[0, np.sqrt(3), -np.sqrt(3)],\n",
    "    [1, 4, 1]\n",
    "    ]\n",
    ")\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 6,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "array([[ 0.        ,  1.73205081, -1.73205081],\n",
       "       [-1.        ,  2.        , -1.        ]])"
      ]
     },
     "execution_count": 6,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "D = X - X.mean(axis=1, keepdims=True)\n",
    "D"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 9,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "array([[3.        , 2.59807621],\n",
       "       [2.59807621, 3.        ]])"
      ]
     },
     "execution_count": 9,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "C = 1/2 * D@D.T\n",
    "C"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 11,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "EigResult(eigenvalues=array([0.40192379, 5.59807621]), eigenvectors=array([[-0.70710678, -0.70710678],\n",
       "       [ 0.70710678, -0.70710678]]))"
      ]
     },
     "execution_count": 11,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "np.linalg.eig(C)"
   ]
  }
 ],
